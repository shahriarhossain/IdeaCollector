<div class="container">
<form method="post" action="/AddIdea">
  <div class="form-group row">
    <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputTitle" name="idea[title]" placeholder="Title" required>
    </div>
  </div>
   <div class="form-group row">
    <label for="inputDescription" class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputDescription" name="idea[description]" placeholder="Description" required>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10">
        <button type="submit" class="btn btn-dark">SAVE</button>
    </div>
  </div>
</form>
</div>